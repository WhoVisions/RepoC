{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "netlify/functions",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "rootDir": "./",
    "types": ["node"],
    "noEmit": false,
    "tsBuildInfoFile": "node_modules/.cache/tsconfig.functions.tsbuildinfo"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
